{
  // ===================================================================
  // Editor Settings
  // ===================================================================

  // Set the default tab size to 2 spaces, a common convention in JS/TS.
  "editor.tabSize": 2,
  // Insert spaces when pressing Tab.
  "editor.insertSpaces": true,
  // Automatically format the document on save.
  "editor.formatOnSave": true,
  "files.autoSave": "onFocusChange",
  // Run ESLint fixes on save. Requires the ESLint extension.
  // "editor.codeActionsOnSave": {
  //   "source.fixAll.eslint": "explicit"
  // },

  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#540468",
    "sideBar.background": "#320246",
    "statusBar.background": "#540468",
    "titleBar.activeBackground": "#540468",
    "activityBar.background": "#3c3c99"
  },

  // ===================================================================
  // Language-Specific Settings
  // ===================================================================

  // Use Prettier as the default formatter for web development files.
  // Requires the Prettier extension (esbenp.prettier-vscode).
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ===================================================================
  // File and Search Exclusions
  // ===================================================================

  // Exclude generated files and folders from the file explorer.
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "node_modules/": true,
    "dist/": true,
    "build/": true
  },
  // Exclude generated files and folders from search results.
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "package-lock.json": true
  },
  "postman.settings.dotenv-detection-notification-visibility": false
}
